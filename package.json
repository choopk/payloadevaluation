{
  "name": "payloadcms-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:nextjs": "turbo run build --filter=@repo/nextjs",
    "dev": "turbo run dev",
    "dev:nextjs": "turbo run dev --filter=@repo/nextjs",
    "dev:svelte": "turbo run dev --filter=@repo/sveltekit",
    "dev:tanstack": "turbo run dev --filter=@repo/tanstack-start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
